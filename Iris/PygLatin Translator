original = raw_input("Enter a word: ")
original = str(original)
if len(original) > 0 and original.isalpha() is True:
    word = original.lower()
    new_word = word[1:len(word)] + word[0] + "ay"
    print("Pig latin: " + new_word)
else:
    print ('empty')


def pyglatin_translator(word):
    if len(word) > 0 and word.isaplha():
        lword = word.lower()
        pyg_word = lword[1:len(word)] + lword[0] + 'ay'
        return pyg_word
    else:
        return 'empty'

