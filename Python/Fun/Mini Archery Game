# Mini Archery Game

import random


print("\033[1;30;30mWelcome Archer")
show_rules = input("Do you know how to play?")

if show_rules == "yes" or "Yes" or "y" or "Y":
    pass # mini tutorial

# Player stats
xpbar = ""
level = 1
