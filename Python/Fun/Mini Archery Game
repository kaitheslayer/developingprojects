username = ""
word_limit = "yes"
while word_limit == "yes":
    username = input("Username: (max 25 characters)  ")
    if username == "admin//Fried-Liver//":
        lvl = input("Enter Level: ")
        level = int(lvl)
    if len(username)<=25:
        word_limit = "no"




spacing = " "*(146-(len(username)))


def backround(level):
    if level == 1:
        print(""" """)



def accurate(level):
    accuracy = globals()
    if level == 1:      # No ratio of level:accuracy -> need to list all outcomes
        accuracy = 10
    if level == 2:
        accuracy = 35
    if level == 3:
        accuracy = 55
    if level == 4:
        accuracy = 75
    if level == 5:
        accuracy = 85
    if level >= 6:
        accuracy = 99
    i = random.randint(1,100)
    if i < accuracy:
        print("BULLSEYE!\nScore: 100")
        level += 1   # level doesn't seem to update?

    else:
        score = [5, 5, 5, 5, 5, 10, 10, 10, 10, 20, 20, 20, 50]
        print("Score: %s" % (random.choice(score)))

